<!-- template to display on clicking password reset link with password change input-->
<!-- card container -->
<div class="card" style="width: 450px;">
  <div class="card-body">
    <h5 class="card-title">Forgot Password</h5>
   
    <p class="card-text">
      <!-- form to send updated password to controller action  with token id and user id to update in db-->
        <form action="/users/validateToken/<%=resetToken.user._id%>/<%=resetToken._id%>" method="post">

   <h6 class="card-subtitle mb-2 text-muted">Reset your Password</h6>
  <!-- password input to take new password -->
   <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" name="password" placeholder="password" id="exampleInputPassword1" required >
  </div>
   <div class="form-group">
    <label for="exampleInputPassword2"> Confirm Password</label>
  
     <input
    type="password"
    class="form-control"
    name="confirm_password"
    id="exampleInputPassword2"
    placeholder="confirm Password"
    required
  />
  </div>
  <button type="submit" class="btn btn-primary">Reset</button>
</form>
    </p>
   
  </div>
</div>





